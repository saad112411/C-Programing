// calculate area of circle,squre,tringle
#include <stdio.h>

float circlearea(float radius)
{
  return  3.14*radius*radius;
  
}
//
float squrearea(float lenght)
{
  return lenght*lenght  ;
}

//
float tringlearea(float base,float height){
     return 0.5*base*height;

}
//
int main(){
    printf("enter a radius \n");
    float radius;
    scanf("%f",&radius);
    
printf("%f",circlearea(radius));
    
    return 0;
}
